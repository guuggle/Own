{
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;database=owndb;uid=owngs;pwd=123456"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ], // only work for structured message
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 10485760, // 10MB 默认1GB
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 31 // 默认31, null无限制
        }
      }
      //{
      //  "Name": "File",
      //  "Args": {
      //    "path": "logs/log.json",
      //    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog" // 这样才能用到enricher
      //  }
      //}
    ]
  }
}
